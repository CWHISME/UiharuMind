<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UiharuMind.Views.Pages.MainPage"
             xmlns:pages="clr-namespace:UiharuMind.ViewModels.Pages"
             x:DataType="pages:MainPageData">

    <Design.DataContext>
        <pages:MainPageData/>
    </Design.DataContext>

    <StackPanel>
        <TextBlock Text="{Binding Title}" FontSize="30" Margin="10" />
        <TextBlock Text="{Binding Count, Mode=TwoWay}"></TextBlock>
        <Button Command="{Binding IncrementCountCommand}">Click me</Button>
    </StackPanel>
</UserControl>