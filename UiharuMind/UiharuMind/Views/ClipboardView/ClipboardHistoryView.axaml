<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:clipboardViewData="clr-namespace:UiharuMind.ViewModels.ViewData.ClipboardViewData"
             xmlns:lang="clr-namespace:UiharuMind.Resources.Lang"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UiharuMind.Views.ClipboardView.ClipboardHistoryView">

    <Design.DataContext>
        <clipboardViewData:ClipboardHistoryViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Gray" />
        </Style>
    </UserControl.Styles>
    
    <Grid RowDefinitions="Auto,Auto,*">
        <Grid Grid.Row="0" Margin="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}" 
                           FontSize="12" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"
                           Padding="2,1" />
                <ToggleButton Name="SearchToggleButton" 
                              IsChecked="{Binding IsSearchActive}" 
                              Click="SearchToggleButton_Click" 
                              VerticalAlignment="Center"
                              Height="20"
                              Width="20"
                              MinHeight="20"
                              MinWidth="20"
                              Padding="2,1">
                    <PathIcon Data="{StaticResource SearchRegular}" />
                </ToggleButton>
            </StackPanel>
        </Grid>
        
        <!-- 搜索输入框 - 初始隐藏 -->
        <TextBox Grid.Row="1" 
                 Name="SearchTextBox" 
                 Text="{Binding SearchText, Mode=TwoWay}" 
                 Margin="3" 
                 IsVisible="{Binding IsChecked, ElementName=SearchToggleButton}"
                 KeyUp="SearchTextBox_KeyUp"/>
        
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="{DynamicResource BorderCardBorderBrush }">
            <ListBox Name="HistoryListBox" ItemsSource="{Binding FilteredClipboardHistoryItems}" FontSize="10">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderCardBorderBrush}" />
                        <Setter Property="CornerRadius" Value="0" />
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="80" RowDefinitions="Auto,*,Auto" Background="Transparent"
                              PointerPressed="InputElement_OnPointerPressed">
                            <Grid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="{x:Static  lang:Lang.Delete}" Click="MenuItemDelete_Click" />
                                    <MenuItem Header="{x:Static  lang:Lang.DeleteAll}" Click="MenuItemDeleteAll_Click" />
                                </ContextMenu>
                            </Grid.ContextMenu>
                            <Image Source="{Binding ImageSource}" IsVisible="{Binding IsImage}" />
                            <TextBlock Grid.Row="1" Text="{Binding Text}" IsVisible="{Binding !IsImage}"
                                       TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Row="2" Text="{Binding Date}" FontSize="9" HorizontalAlignment="Right" />
                            <ToolTip.Tip>
                                <TextBlock Text="{Binding Text}" />
                            </ToolTip.Tip>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>

</UserControl>