<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="UiharuMind.Views.Windows.QuickChatResultWindow"
        Width="400"
        Height="300"
        Title="QuickChatResultWindow">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*" Margin="10">
        <Border Height="30" Background="Transparent" PointerPressed="InputElement_OnPointerPressed">
            <DockPanel LastChildFill="False">
                <TextBlock Text="QuickChat Result" FontSize="20" DockPanel.Dock="Left" />
                <Button Content="X" DockPanel.Dock="Right" HorizontalAlignment="Right"
                        Click="CloseButton_Click" />
            </DockPanel>
        </Border>
        <ScrollViewer Name="ScrollViewer" Grid.Row="1" Margin="0,10,0,10">
            <SelectableTextBlock Name="ResultTextBlock" TextWrapping="Wrap" Margin="10,0,10,0"></SelectableTextBlock>
        </ScrollViewer>
    </Grid>

</Window>